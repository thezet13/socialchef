{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
